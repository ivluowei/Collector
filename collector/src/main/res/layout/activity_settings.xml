<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <!-- title bar -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/about_us_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:text="@string/about_us"
                    android:textColor="#353535"
                    android:textSize="17sp" />

                <include android:id="@+id/horizontal_line" 
                    layout="@layout/layout_horizontal_line"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/user_logout_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:text="@string/user_logout"
                    android:textColor="#353535"
                    android:textSize="17sp"
                    android:visibility="gone" />
                
            </LinearLayout>
    </ScrollView>
    
</LinearLayout>
