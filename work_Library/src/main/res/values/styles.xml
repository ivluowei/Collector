<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- 设置没有标题 -->  
        <item name="android:windowNoTitle">true</item>  
    </style>
    
        <style name="title_bar_style">
        <item name="android:background">@color/title_bar</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>
    
    <style name="title_text_style">
        <item name="android:textSize">@dimen/title_bar_text_size</item>
        <item name="android:textColor">@color/title_bar_text_color</item>
    </style>
    
    <style name="common_button_style">
 	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_next_height</item>
 	    <item name="android:padding">6.0dip</item>
 	    <item name="android:textColor">@android:color/white</item>
 	    <item name="android:textSize">@dimen/font_large</item>
 	    <item name="android:layout_gravity">center_horizontal</item>
 	    
 	</style>
 	
    <style name="default_listView_style">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@drawable/line_list_seperator</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>
    
</resources>
